
{
  "tileLayer": {
    "url": "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png",
    "attribution": "&copy; <a href=\"https://www.openstreetmap.org/copyright\">OpenStreetMap</a> contributors",
    "maxZoom": 18,
    "minZoom": 10
  },
  "defaultView": {
    "zoom": 12,
    "maxBounds": null
  },
  "markerStyle": {
    "color": "#021D49",
    "fillColor": "#021D49",
    "fillOpacity": 0.8,
    "weight": 2,
    "radius": 8,
    "className": "location-marker"
  },
  "tooltipStyle": {
    "className": "location-tooltip",
    "permanent": false,
    "direction": "top",
    "offset": [0, -10]
  }
}
